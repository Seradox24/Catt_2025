---
import Layout from '../layouts/Layout.astro';
import Card from '../components/comp_index/Card.astro';
const pageTitle = "Página 1";
---
<Layout title="Escribir opinión">

<div class="relative overflow-x-auto shadow-md sm:rounded-lg mb-8">
    <h2 class="text-xl font-bold mb-4 dark:text-white">Calificaciones Pendientes</h2>
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Lugar
                </th>
                <th scope="col" class="px-6 py-3">
                    Cargo
                </th>
                <th scope="col" class="px-6 py-3">
                    Jornada
                </th>
                <th scope="col" class="px-6 py-3">
                    Acción
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                    Restaurante El Buen Sabor
                </td>
                <td class="px-6 py-4">
                    Ayudante de Cocina
                </td>
                <td class="px-6 py-4">
                    Part-time
                </td>
                <td class="px-6 py-4">
                    <button data-modal-target="opinion-modal" data-modal-toggle="opinion-modal" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Calificar</button>
                </td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                    Hotel Vista Mar
                </td>
                <td class="px-6 py-4">
                    Recepcionista
                </td>
                <td class="px-6 py-4">
                    Full-time
                </td>
                <td class="px-6 py-4">
                    <button data-modal-target="opinion-modal" data-modal-toggle="opinion-modal" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Calificar</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Modal toggle -->
<button data-modal-target="opinion-modal" data-modal-toggle="opinion-modal" class="hidden" type="button">
  Toggle modal
</button>

<!-- Main modal -->
<div id="opinion-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    Crear Nueva Opinión
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="opinion-modal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Cerrar modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <form class="p-4 md:p-5">
                <div class="grid gap-4 mb-4 grid-cols-2">
                    <div class="col-span-2 sm:col-span-1">
                        <label for="rating" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Calificación</label>
                        <div class="flex justify-start items-center space-x-1 mb-4">
                            <input type="radio" id="5-stars" name="rating" value="5" class="hidden">
                            <label for="5-stars" class="text-yellow-400 text-2xl cursor-pointer hover:scale-110">★</label>
                            <input type="radio" id="4-stars" name="rating" value="4" class="hidden">
                            <label for="4-stars" class="text-yellow-400 text-2xl cursor-pointer hover:scale-110">★</label>
                            <input type="radio" id="3-stars" name="rating" value="3" class="hidden">
                            <label for="3-stars" class="text-yellow-400 text-2xl cursor-pointer hover:scale-110">★</label>
                            <input type="radio" id="2-stars" name="rating" value="2" class="hidden">
                            <label for="2-stars" class="text-yellow-400 text-2xl cursor-pointer hover:scale-110">★</label>
                            <input type="radio" id="1-star" name="rating" value="1" class="hidden">
                            <label for="1-star" class="text-yellow-400 text-2xl cursor-pointer hover:scale-110">★</label>
                        </div>
                    </div>
                    <div class="col-span-2">
                        <label for="opinion" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Opinión</label>
                        <textarea id="opinion" rows="4" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Cuéntanos cómo fue tu experiencia en esta empresa. Recuerda que esto será público para compañeros y docentes."></textarea>                    
                    </div>
                </div>
                <button type="button" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" onclick="alert('Opinión añadida!')">
                    <svg class="me-1 -ms-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
                    Añadir opinión
                </button>
            </form>
        </div>
    </div>
</div>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <h2 class="text-xl font-bold mb-4 dark:text-white">Calificaciones Realizadas</h2>
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Lugar
                </th>
                <th scope="col" class="px-6 py-3">
                    Cargo
                </th>
                <th scope="col" class="px-6 py-3">
                    Tiempo
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                    Hotel Diego de Almagro
                </td>
                <td class="px-6 py-4">
                    Botones (Práctica)
                </td>
                <td class="px-6 py-4">
                    2 meses
                </td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                    Hotel Sheraton
                </td>
                <td class="px-6 py-4">
                    Recepcionista (Práctica)
                </td>
                <td class="px-6 py-4">
                    3 meses
                </td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                    Resort Las Dunas
                </td>
                <td class="px-6 py-4">
                    Ayudante de Cocina
                </td>
                <td class="px-6 py-4">
                    1 año
                </td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                    Hotel Plaza San Francisco
                </td>
                <td class="px-6 py-4">
                    Asistente de Eventos
                </td>
                <td class="px-6 py-4">
                    1 año y 3 meses
                </td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                    Hotel Cumbres Lastarria
                </td>
                <td class="px-6 py-4">
                    Coordinador de Actividades
                </td>
                <td class="px-6 py-4">
                    2 años
                </td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                    EcoLodge Patagonia
                </td>
                <td class="px-6 py-4">
                    Encargado de Atención al Cliente
                </td>
                <td class="px-6 py-4">
                    8 meses
                </td>
            </tr>
        </tbody>
    </table>
</div>


</Layout> 
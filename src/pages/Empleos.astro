---
import Layout from '../layouts/Layout.astro';
import Tab from '../components/comp_emple/Tab.astro'
import Card_s from '../components/comp_index/card_slide.astro'
import Card_s2 from '../components/comp_emple/card_slide2.astro'

const pageTitle = "Página 1";
---
<Layout title="Empleos. " >

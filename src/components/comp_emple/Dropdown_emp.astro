---

interface Props {
	title?: string;
	body?: string;
	href?: string;
    tags?: string;
    id?: string;
    options?: string[];
}
const { href, title, body,tags,id,options } = Astro.props;
---

<div class="mx-6 w-[150px] text-gray-900 dark:text-gray-100">
	<div class="relative w-full group">
        <label class="text-xs text-gray-100 font-bold">{title}</label><button class="py-2.5 px-3 w-full md:text-sm text-site bg-transparent border border-dimmed  focus:border-brand focus:outline-none focus:ring-0 peer flex items-center justify-between rounded font-semibold">Todas</button>
		<div
			class="absolute z-[99] top-[100%] left-[50%] translate-x-[-50%] rounded-md overflow-hidden shadow-lg min-w-[200px] w-max peer-focus:visible peer-focus:opacity-100 opacity-0 invisible duration-200 p-1 bg-gray-100 dark:bg-gray-800  border border-dimmed text-xs md:text-sm">
            {options && options.map(option => (
                <div
                    class="w-full block cursor-pointer hover:bg-white dark:hover:bg-gray-900 dark:bg-gray-800 hover:text-link px-3 py-2 rounded-md">
                    {option}
                </div>
            ))}
		</div>
	</div>
</div>


